<!DOCTYPE html>
<html>
<head>
	<title>User</title>
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<!-- 	<link href="public/style.css" rel="stylesheet"> -->
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
	
	  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	  <script src="../public/app.js"></script>
</head>
<body class="container">
	<div class="row p-5">
		<h1>User</h1>
	</div>
		<div class='row p-5'>
			<h2>Weight</h2>	
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Date</th>
						<th scope="col">Weight</th>
					</tr>
				</thead>
				<tbody>
				<% var i = 1 %>	
				<% weights.forEach(function(weight){ %>
					<tr>
						<th scope="row"><%= i %></th>
						<% i = i +1%>
						<td><%= weight.data().timestamp %></td>
						<td><%= weight.data().weight %></td>
					</tr>
				<% }); %>
				</tbody>
			</table>
		</div>
		<div class='row p-5'>
			<h2>Blood Sugar</h2>
						<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Date</th>
						<th scope="col">Blood Sugar Level</th>
					</tr>
				</thead>
				<tbody>
				<% var i = 1 %>	
				<% bloodSugars.forEach(function(bloodSugar){ %>
					<tr>
						<th scope="row"><%= i %></th>
						<% i = i +1%>
						<td><%= bloodSugar.data().timestamp %></td>
						<td><%= bloodSugar.data().bloodSugar %></td>
					</tr>
				<% }); %>	
				</tbody>
			</table>
		</div>
		<div class='row p-5'>
			<h2>Blood Pressure</h2>
						<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Date</th>
						<th scope="col">Systolic</th>
						<th scope="col">Diastolic</th>
					</tr>
				</thead>
				<tbody>
				<% var i = 1 %>	
				<% bloodPressures.forEach(function(bloodPressure){ %>
					<tr class='bp'>
						<th scope="row"><%= i %></th>
						<% i = i +1%>
						<td><%= bloodPressure.data().timestamp%></td>
						<td id='systolic-<%=i%>'><%= bloodPressure.data().systolic %></td>
						<td id='diastolic-<%=i%>'><%= bloodPressure.data().diastolic %></td>
					</tr>	
				<% }); %>	
				</tbody>
			</table>
			  <div id="chart_div"></div>
		</div>   
</body>
</html>